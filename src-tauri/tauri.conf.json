{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Desklist",
  "version": "1.2.0",
  "identifier": "com.lin.desklist",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Desklist",
        "width": 360,
        "height": 520,
        "alwaysOnBottom": true,
        "decorations": false,
        "transparent": true,
        "resizable": true,
        "minWidth": 300,
        "minHeight": 400,
        "windowEffects": {
          "effects": ["acrylic"],
          "color": "#0f0f1900"
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {}

}
